!!! Strict

%head
  %title Monkey
  %link(rel="stylesheet" href="/css/blueprint/screen.css" type="text/css" media="screen, projection")
  %link(rel="stylesheet" href="/css/blueprint/print.css" type="text/css" media="print")
  %link(rel="stylesheet" href="/css/main.css" type="text/css" media="screen, projection")
  /[if lt IE 8]
    %link(rel="stylesheet" href="css/blueprint/ie.css" type="text/css" media="screen, projection")
  =javascript_include_tag :defaults

%body
  .container
    #header.column.span-24
      %a{:href => root_path}Home
      %a{:href => folders_path}Folders
      - if signed_in?
        Signed in as #{current_user.display_name}
        %a{:href => edit_user_path(current_user)}Settings
    #main{:class => "column span-#{@main_columns} first"}
      = yield
    #sidebar{:class => "column span-#{@sidebar_columns} last"}
      = render :partial => "site/sidebar"
