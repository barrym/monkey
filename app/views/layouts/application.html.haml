!!! Strict

%head
  %title Monkey
  %link(rel="stylesheet" href="/css/blueprint/screen.css" type="text/css" media="screen, projection")
  %link(rel="stylesheet" href="/css/blueprint/print.css" type="text/css" media="print")
  %link(rel="stylesheet" href="/css/main.css" type="text/css" media="screen, projection")
  %link(rel="stylesheet" href="/css/jquery.autocomplete.css" type="text/css" media="screen, projection")
  %link(rel="stylesheet" href="/css/jquery-ui-1.7.2.custom.css" type="text/css" media="screen, projection")
  /[if lt IE 8]
    %link(rel="stylesheet" href="css/blueprint/ie.css" type="text/css" media="screen, projection")
  =javascript_include_tag 'jquery-1.3.2.min.js'
  =javascript_include_tag 'jquery.autocomplete.pack.js'
  =javascript_include_tag 'jquery.form.js'
  =javascript_include_tag 'jquery-ui-1.7.2.custom.min.js'
  :javascript
    var $j = jQuery.noConflict();
  =javascript_include_tag 'prototype.js'
  =javascript_include_tag :juggernaut
  =javascript_include_tag 'application.js'

%body
  .container
    #header.column.span-24
      %a{:href => root_path}Home
      - unless signed_in?
        %a{:href => sign_in_path}Sign in
      %a{:href => categories_path}Categories
      %a{:href => users_path}Users
      = image_tag('spinner.gif', :id => 'spinner', :style => 'display:none;')
    #main{:class => "column span-#{@main_columns}"}
      = juggernaut_connection
      = yield
    #sidebar{:class => "column span-#{@sidebar_columns} last"}
      = render :partial => "site/sidebar"
